<div class="moviePage">

    <div class="movie">

        <div class="movie-menu">
            <p class="movie-main-title">Movies</p>
        </div>

         <div id="movie-links-holder">
            <a href="/movies/add">Add a Movie of Choice</a>
        </div>

        <div class="movie-container">
            {{#each movies}}
            <div class="movie-box">
                <p class="movie-titles">{{this.title}}</p>
             <div class="movie-image">
                 <a href="/Movies/movies-list/{{this.id}}"><img src="/uploads/{{this.smallPoster}}" alt="{{this.title}}" 
                 width="180" height="280"> </a>   

            <a href="/Movies/edit/{{this.id}}">Edit</a>
            <a href="/Movies/delete/{{this.id}}?method=DELETE" class="edit-delete-button">Delete</a>

            </div>
            </div>
           {{/each}}
        </div>
    </div>
</div>