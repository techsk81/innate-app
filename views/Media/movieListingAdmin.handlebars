<div class="moviePage">

    <div class="movie">

        <div class="movie-menu">
            <p class="movie-main-title">Movie and TV Shows Dashboard</p>
        </div>

         <div id="movie-links-holder">
            <a href="/media/add"><button class="add-movie-button"> Add a Movie or TV Show</button></a>
        </div>

        <div class="movie-container">
            {{#each movies}}
            <div class="movie-box">
                <p class="movie-titles">{{this.title}}</p>
             <div class="movie-image">
                 <a href="/Media/media-list/{{this.id}}"><img src="/uploads/{{this.smallPoster}}" alt="{{this.title}}" 
                 width="180" height="280"> </a>   

            <a href="/Media/edit/{{this.id}}">Edit</a>
            <a href="/Media/delete/{{this.id}}?method=DELETE" class="edit-delete-button">Delete</a>

            </div>
            </div>
           {{/each}}
        </div>
    </div>
</div>